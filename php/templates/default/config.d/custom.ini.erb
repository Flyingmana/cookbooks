
error_reporting = E_ALL

memory_limit = 2G

upload_max_filesize = 500M
max_input_time = 300




;extension=xdebug.so
;extension=mcrypt.so

;extension=apc.so
;extension=ssh2.so

;zend_extension="/usr/local/lib/php/extensions/no-debug-non-zts-20100525/xdebug.so"
;xdebug.auto_trace = off
;xdebug.collect_includes = off
;xdebug.collect_params = 3
;xdebug.remote_enable = On
xdebug.var_display_max_depth = 5
xdebug.max_nesting_level = 200
xdebug.idekey=PHPSTORM
xdebug.remote_host=127.0.0.1
xdebug.remote_port = 9100
xdebug.profiler_enable_trigger=1
;xdebug.remote_log="/tmp/xdebug.log"


;apc.enabled=1
apc.shm_size=512M
apc.num_files_hint=10000
apc.user_entries_hint=10000
apc.max_file_size=5M
apc.stat=0
apc.optimization=0
apc.shm_segments=1
apc.enable_cli=1
apc.cache_by_default=1
;apc.include_once_override=1

zend_extension="/usr/local/lib/php/extensions/no-debug-non-zts-20121212/opcache.so"
opcache.enable=1
opcache.memory_consumption=512
opcache.interned_strings_buffer=16
opcache.max_accelerated_files=14000
opcache.revalidate_freq=<%= node["php"][:opcache][:revalidate_freq] %>
opcache.fast_shutdown=1
opcache.enable_cli=1

; if disabled every annotation based library does not work, so always enable
opcache.save_comments=1
opcache.load_comments=1

; for testing, as we dont know what problems it could cause but it promises
; a good performance boost for magento system
opcache.enable_file_override=1

